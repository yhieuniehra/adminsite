<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Danh Sách Lịch Đặt Chỗ</title>
  <!-- Link Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .Pending { background-color: #fff3cd !important; } /* Vàng nhạt */
    .Confirmed { background-color: #d4edda !important; } /* Xanh nhạt */
    .Cancelled { background-color: #f8d7da !important; } /* Đỏ nhạt */
  </style>
</head>
<body>
  <div class="container mt-4">
    <h1 class="text-center text-primary">ADMIN SITE</h1>

    <div class="d-flex justify-content-end mb-3">
      <a href="/bookings/new" class="btn btn-success">admin site</a>
    </div>

    <table class="table table-hover table-bordered">
      <thead class="table-dark">
        <tr>
          <th>ID</th>
          <th>Tên Khách Hàng</th>
          <th>Ngày</th>
          <th>Giờ</th>
          <th>Trạng Thái</th>
          <th>Hành Động</th>
        </tr>
      </thead>
      <tbody>
        <% bookings.forEach(booking => { %>
          <tr class="<%= booking.status %>">
            <td><%= booking._id %></td>
            <td><%= booking.customerName %></td>
            <td><%= booking.date.toISOString().split('T')[0] %></td>
            <td><%= booking.time %></td>
            <td><%= booking.status %></td>
            <td>
              <a href="/bookings/edit/<%= booking._id %>" class="btn btn-warning btn-sm">Sửa</a>
              <a href="/bookings/cancel/<%= booking._id %>" class="btn btn-danger btn-sm">Hủy</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <!-- Link Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
